{
  "manifest_version": 2,

  "name": "Lyrics Plugin",
  "description": "This extension will be help you search song's lyrics.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://genius.com https://assets.genius.com 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "https://genius.com/"
  ]
}